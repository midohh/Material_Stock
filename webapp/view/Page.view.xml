<mvc:View controllerName="de.lhind.material.controller.Page" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<headerContent>
					<Button icon="sap-icon://action" tooltip="Share"/>
				</headerContent>
				<subHeader>
					<Toolbar>
						<SearchField id="searchMaterial" placeholder="{i18n>searchMaterial}" maxLength="18" enableSuggestions="true" search="onSearch" suggest="onSuggest"
							suggestionItems="{ path: '/ProductCollection', sorter: { path: 'ProductId' } }">
							<suggestionItems>
								<SuggestionItem text="{path:'ProductId'}" description="{path:'Name'}"/>
							</suggestionItems>
						</SearchField>
					</Toolbar>
				</subHeader>
				<content>
					<!-- Object -->
					<Panel id="objectPanel"  width="auto" headerText="{ProductId}" expandable="{device>/system/phone}" expanded="true">
						<content>
							<ObjectHeader	title="{Name}"
											number="{ parts:[{path:'Price'},{ path: 'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
											numberUnit="{CurrencyCode}" 
											responsive="true" 
											icon="{ProductPicUrl}">
								<attributes>
									<ObjectAttribute title="{i18n>weight}" text="{WeightMeasure} {WeightUnit}"/>
									<ObjectAttribute title="{i18n>dimensions}" text="{Width} x {Depth} X {Height} {DimUnit}"/>
								</attributes>
								<statuses>
									<ObjectStatus text="In Stock" state="Success"/>
								</statuses>
								<headerContainer>
									<IconTabBar id="itb1" selectedKey="key2" upperCase="true" >
										<items>
											<IconTabFilter text="{i18n>info}" key="key1">
												<content>
													<Text text="{Description}"/>
												</content>
											</IconTabFilter>
											<IconTabFilter text="{i18n>stock}" key="key2">
												<content>
													<l:VerticalLayout width="100%">
														<l:content>
															<Table id="idProductsTable" inset="false" items="{ path: 'Stock', sorter: { path: 'Werk' } }">
																<headerToolbar>
																	<Toolbar>
																		<Title text="{i18n>stockOverview}" level="H2"/>
																	</Toolbar>
																</headerToolbar>
																<columns>
																	<Column>
																		<Text text="{i18n>plant}"/>
																	</Column>
																	<Column minScreenWidth="Tablet" demandPopin="true">
																		<Text text="{i18n>storLoc}"/>
																	</Column>
																	<Column minScreenWidth="Tablet" demandPopin="true">
																		<Text text="{i18n>unrestricted}"/>
																	</Column>
																	<Column minScreenWidth="Tablet" demandPopin="true">
																		<Text text="{i18n>specialStock}"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem>
																		<cells>
																			<ObjectNumber number="{Plant}"/>
																			<ObjectNumber number="{StorLoc}"/>
																			<ObjectNumber number="{Unrestricted}"/>
																			<ObjectNumber number="{Special}"/>
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</l:content>
													</l:VerticalLayout>
												</content>
											</IconTabFilter>
										</items>
									</IconTabBar>
								</headerContainer>
							</ObjectHeader>
						</content>
					</Panel>
					<!--	<mvc:XMLView viewName ="de.lhind.material.view.Object"/> -->
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="Accept" type="Accept"/>
						<!--<Button text="Reject" type="Reject"/> -->
						<!--<Button text="Edit"/> -->
						<!--<Button text="Delete"/> -->
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>